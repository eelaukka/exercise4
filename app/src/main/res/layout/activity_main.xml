<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:textAlignment="center"
    android:background="#78909c"
    tools:context="com.example.jussijokio.exercise4.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:labelFor="@+id/SaveMessageField"
        android:text="Your message:"
        android:padding="15dp"
        android:textColor="@android:color/background_light"
        android:textSize="20dp" />

        <EditText
            android:id="@+id/SaveMessageField"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:padding="15dp"
            android:background="@color/colorPrimaryLight"
            android:hint="What would you like to say to your nearby friends?"
            android:text=""
            android:textSize="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nearbyUsers"
        android:text="0 Friends nearby"
        android:padding="10dp"
        android:textSize="20dp"
        android:gravity="center"/>

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        android:id="@+id/map"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        class="com.google.android.gms.maps.SupportMapFragment"/>
        <Button
            android:id="@+id/intent_switcher"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Nearby friends"
            android:textSize="15dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center|bottom"
            android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
            />
    <Button
        android:id="@+id/SaveMessage"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
        android:backgroundTint="@color/colorAccent"
        android:text="Log out"
        android:textSize="15dp"
        android:textColor="@color/common_google_signin_btn_text_dark_pressed"/>


</android.widget.LinearLayout>
